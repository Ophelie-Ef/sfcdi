{% extends 'base.html.twig' %}

{% block title %}Livre index
{% endblock %}

{% block body %}

	<h1>Livre index</h1>

	{% for messages in app.flashes %}
		{% for message in messages %}

			<div class='flash-notice'>
				{{ message }}
			</div>

		{% endfor %}
	{% endfor %}

	<table class="table">
		<thead>
			<tr>
				<th>Titre</th>
				<th>Auteur</th>
				<th>Image</th>
				<th>Resume</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for livre in livres %}
				<tr>
					<td>{{ livre.titre }}</td>
					<td>{{ livre.auteur }}</td>
					{% if 'http' in 'main ' ~ livre.image %}
						<td><img src="{{ livre.image }}" alt="{{ livre.titre }}"></td>
					{% else %}
						<td><img src="{{ asset('uploads/images/livres/') ~ livre.image }}" alt="{{ livre.titre }}"></td>
					{% endif %}
					<td>{{ livre.resume }}</td>
					<td>
						<a href="{{ path('app_livre_show', {'id': livre.id}) }}">show</a>
						<a href="{{ path('app_livre_edit', {'id': livre.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
		<tr>
			{{ knp_pagination_render(livres) }}
		</tr>
	</table>

	<a href="{{ path('app_livre_new') }}">Create new</a>
{% endblock %}
